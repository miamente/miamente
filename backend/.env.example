# =============================================================================
# MIAMENTE BACKEND ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and update the values according to your environment
# =============================================================================

# =============================================================================
# BASIC SETTINGS
# =============================================================================
PROJECT_NAME=Miamente Backend
VERSION=0.1.0
API_V1_STR=/api/v1
DEBUG=false

# =============================================================================
# SECURITY
# =============================================================================
# Generate a secure secret key for JWT tokens
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256

# JWT Token expiration times (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days
REFRESH_TOKEN_EXPIRE_MINUTES=43200  # 30 days

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_NAME=localhost
SERVER_HOST=http://localhost:8000

# Allowed hosts for the application
ALLOWED_HOSTS=localhost,127.0.0.1,*.railway.app,*.vercel.app

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins for CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000,https://miamente.vercel.app

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Individual database configuration (recommended for security)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=miamente
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_secure_password

# Alternative: You can also set the full DATABASE_URL directly
# DATABASE_URL=postgresql://user:password@localhost:5432/miamente

# =============================================================================
# TIMEZONE
# =============================================================================
# Application timezone
TIMEZONE=America/Bogota

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================
# 1. Never commit the actual .env file to version control
# 2. Generate a strong SECRET_KEY for production
# 3. Set DATABASE_USER and DATABASE_PASSWORD with your actual database credentials
# 4. Update CORS origins for your frontend domains
# 5. Database credentials are now required for security (SonarQube compliance)
# =============================================================================
