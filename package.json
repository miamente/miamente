{
  "name": "miamente",
  "private": true,
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "functions"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "npm run dev -w apps/web",
    "build": "npm run build -ws",
    "lint": "npm run lint -ws",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "npm run typecheck -ws",
    "test": "npm run test -ws",
    "test:ci": "npm run test:ci -ws",
    "test:emulator": "npm run test:emulator -w functions",
    "test:accessibility": "npm run test:accessibility -w apps/web",
    "test:integration": "npm run test:integration -ws",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:staging": "E2E_BASE_URL=https://miamente-staging.web.app playwright test",
    "emulators": "npm run emulators -w functions",
    "deploy": "npm run deploy -w functions",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.42.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,mdx}": "prettier --write"
  }
}
