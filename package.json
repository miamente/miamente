{
  "name": "miamente-platform",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev -w apps/web",
    "build": "npm run build -w apps/web",
    "start": "npm run start -w apps/web",
    "lint": "npm run lint -w apps/web",
    "lint:fix": "npm run lint:fix -w apps/web",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "npm run typecheck -w apps/web",
    "test": "npm run test -w apps/web",
    "test:ci": "npm run test:ci -w apps/web",
    "test:accessibility": "npm run test:accessibility -w apps/web",
    "test:integration": "echo 'Integration tests removed - migrated from Firebase to FastAPI/PostgreSQL'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:staging": "E2E_BASE_URL=https://miamente-staging.vercel.app playwright test",
    "lighthouse": "lhci autorun",
    "lighthouse:collect": "lhci collect",
    "lighthouse:assert": "lhci assert"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.55.0",
    "actionlint": "^2.0.6",
    "lint-staged": "^16.1.6",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "typescript-eslint": "^8.42.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
