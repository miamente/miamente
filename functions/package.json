{
  "name": "functions",
  "private": true,
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "npm run build -- --watch",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "test:integration": "echo \"Integration tests require Firebase emulators. Use 'npm run test:emulator' instead.\" && exit 0",
    "test:emulator": "vitest run emulator.test.ts",
    "typecheck": "tsc --noEmit",
    "deploy": "npx firebase deploy --only functions",
    "emulators": "npx firebase emulators:start --only functions,firestore,storage,auth --project demo-miamente"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.0",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "firebase-functions-test": "^3.4.1",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  }
}
