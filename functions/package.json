{
  "name": "functions",
  "private": true,
  "type": "module",
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "npm run build -- --watch",
    "test": "vitest run",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "test:emulator": "vitest run emulator.test.ts",
    "typecheck": "tsc --noEmit",
    "deploy": "npx firebase deploy --only functions",
    "emulators": "npx firebase emulators:start --only functions,firestore,storage,auth --project demo-miamente"
  },
  "dependencies": {
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^5.1.1",
    "zod": "^3.23.8",
    "@sendgrid/mail": "^8.1.0"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "vitest": "^2.1.8",
    "@firebase/rules-unit-testing": "^3.1.0"
  }
}
